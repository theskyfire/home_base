##############################################################################
# Project Template
##############################################################################

STAGE			=%
PRJ			=$(this)
$(this).LOG		=$(tmp)/$(PRJ).$(STAGE).log

# Default stage.prg.PATH = stage.PATH
$(foreach s,$(stages),$(eval $(s).$(this).PATH=$$($(s).PATH)))

# prg: install(prj)
.PHONY: $(this)
$(this): install($(this))

# Record action in PRJ.STAGE.log
$($(this).LOG):		PRJ:=$(this)
$($(this).LOG): $$($$(STAGE).FORCE) | $$(@D) $$($$(STAGE).$$(PRJ).PATH)
	# [$(PRJ)] [$($(PRJ).URL)] [$(git.URL)]
	$($(STAGE).CMD_SEQ)
